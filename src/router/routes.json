                }
            ]
        }
    },
    "/deals": {
        "allow": {
            "conditions": [
                {
                    "label": "User must be logged in",
                    "rule": "authenticated"
                }
            ]
        }
    },
    "/orders": {
        "allow": {
            "conditions": [
                {
                    "label": "User must be logged in",
                    "rule": "authenticated"
                }
            ]
        }
    },
    "/checkout": {
        "allow": {
            "conditions": [
                {
                    "label": "User must be logged in",
                    "rule": "authenticated"
                }
            ]
        }
    },
    "/checkout/*": {
        "allow": {
            "conditions": [
                {
                    "label": "User must be logged in",
                    "rule": "authenticated"
                }
            ]
        }
    },
    "/admin": {
        "allow": {
            "conditions": [
                {
                    "label": "User must be logged in",
                    "rule": "authenticated"
                },
                {
                    "label": "Role must be Admin",
                    "rule": "role:admin"
                }
            ],
            "operator": "AND"
        }
    },
    "/admin/*": {
        "allow": {
            "conditions": [
                {
                    "label": "User must be logged in",
                    "rule": "authenticated"
                },
                {
                    "label": "Role must be Admin",
                    "rule": "role:admin"
                }
            ],
            "operator": "AND"
        }
    },
    "/admin/**/*": {
        "allow": {
            "conditions": [
                {
                    "label": "User must be logged in",
                    "rule": "authenticated"
                },
                {
                    "label": "Role must be Admin",
                    "rule": "role:admin"
                }
            ],
            "operator": "AND"
        }
    },
    "/premium/*": {
        "allow": {
            "conditions": [
                {
                    "label": "Plan must be Premium",
                    "rule": "plan:premium"
                }
            ]
        }
    },
    "/external": {
        "allow": {
            "conditions": [
                {
                    "label": "Must be external user",
                    "rule": "external:true"
                }
            ]
        }
    }
