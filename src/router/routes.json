{
    "/": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "Anyone can access",
                        "rule": "public"
                    }
                ]
            }
        }
    },
    "/product/:id": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "Anyone can view products",
                        "rule": "public"
                    }
                ]
            }
        }
    },
    "/category/:category": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "Anyone can browse categories",
                        "rule": "public"
                    }
                ]
            }
        }
    },
    "/login": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "Login page is public",
                        "rule": "public"
                    }
                ]
            }
        }
    },
    "/signup": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "Signup page is public",
                        "rule": "public"
                    }
                ]
            }
        }
    },
    "/callback": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "Auth callback is public",
                        "rule": "public"
                    }
                ]
            }
        }
    },
    "/error": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "Error page is public",
                        "rule": "public"
                    }
                ]
            }
        }
    },
    "/search": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    }
                ]
            },
            "redirectOnDeny": "/login"
        }
    },
    "/wishlist": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    }
                ]
            },
            "redirectOnDeny": "/login"
        }
    },
    "/deals": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    }
                ]
            },
            "redirectOnDeny": "/login"
        }
    },
    "/orders": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    }
                ]
            },
            "redirectOnDeny": "/login"
        }
    },
    "/checkout": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    }
                ]
            },
            "redirectOnDeny": "/login"
        }
    },
    "/checkout/*": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    }
                ]
            },
            "redirectOnDeny": "/login"
        }
    },
    "/admin": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    },
                    {
                        "label": "Role must be Admin",
                        "rule": "emailAddress == \"admin@example.com\""
                    }
                ],
                "operator": "AND"
            },
            "redirectOnDeny": "/error?message=admin_access_required"
        }
    },
    "/admin/*": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    },
                    {
                        "label": "Role must be Admin",
                        "rule": "accounts[0].profile.name == 'CEO'"
                    }
                ],
                "operator": "AND"
            },
            "redirectOnDeny": "/error?message=admin_access_required"
        }
    },
    "/admin/**/*": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "User must be logged in",
                        "rule": "authenticated"
                    },
                    {
                        "label": "Role must be Admin",
                        "rule": "accounts[0].profile.name == 'CEO'"
                    }
                ],
                "operator": "AND"
            },
            "redirectOnDeny": "/error?message=admin_access_required"
        }
    },
    "/external": {
        "allow": {
            "when": {
                "conditions": [
                    {
                        "label": "Must be external user",
                        "rule": "userMetadata.isExternal"
                    }
                ]
            },
            "redirectOnDeny": "/error?message=internal_users_only"
        }
    }
}