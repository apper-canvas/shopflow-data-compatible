{
    "/": {
        "allow": {
            "conditions": [
                {
                    "label": "Anyone can access",
                    "rule": "public"
                }
            ]
        }
    },
    "/product/:id": {
        "allow": {
            "conditions": [
                {
                    "label": "Anyone can view products",
                    "rule": "public"
                }
            ]
        }
    },
    "/category/:category": {
        "allow": {
            "conditions": [
                {
                    "label": "Anyone can browse categories",
                    "rule": "public"
                }
            ]
        }
    },
    "/login": {
        "allow": {
            "conditions": [
                {
                    "label": "Login page is public",
